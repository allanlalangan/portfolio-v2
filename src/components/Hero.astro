---
import { socialLinks } from '../data/data';

const icon = 'ᾰ';
---

<section class='mx-4 flex min-h-screen flex-col justify-center'>
	<figure class='logo mb-4 flex translate-y-10 items-baseline opacity-0'>
		<a
			href='/'
			class='w-fit font-times text-8xl font-bold italic text-yellow-200'
		>
			{icon}
		</a>
		<span class='flex items-center font-times text-yellow-200'>©</span>
	</figure>
	<article class='flex flex-col items-baseline md:mx-12 md:flex-row'>
		<h2
			class='heading-bullet mb-12 flex translate-y-10 items-baseline opacity-0'
		>
			<span
				class='h-12 w-12 border-b-2 border-r-2 border-yellow-200 font-heading text-4xl font-light -tracking-widest'
			>
				0.
			</span>
		</h2>
		<p class='bio translate-y-10 text-xl opacity-0 sm:mx-4 lg:w-2/3 xl:w-1/2'>
			Hello hi. I'm Allan. A Software Engineer with a background in Art &
			Design. I build full-stack web applications and specialize front end web
			development. You can catch my weekly coding livestreams on Twitch.
		</p>
	</article>
	<nav
		aria-label='Main Navigation'
		class='mt-8 flex flex-col-reverse font-heading text-xl sm:mx-4 md:mx-12 md:flex-row md:items-center'
	>
		<ul class='my-8 flex flex-col md:my-0'>
			<li
				class='nav-link link-hover flex translate-y-10 underline-offset-2 opacity-0 hover:underline'
			>
				<a href='#projects' class='w-full' href=''>Projects</a>
			</li>
			<li
				class='nav-link link-hover flex translate-y-10 underline-offset-2 opacity-0 hover:underline'
			>
				<a
					class='w-full'
					target='_blank'
					rel='noreferrer noopener'
					href='https://allanla.hashnode.dev/'>Blog</a
				>
			</li>
		</ul>
		<aside
			aria-label='Social Contact Links'
			class='social-links grid translate-y-10 grid-cols-4 justify-evenly border border-yellow-200 text-yellow-200 opacity-0 sm:w-fit md:ml-12 md:mb-0'
		>
			{
				socialLinks?.map(({ name, url }, i, arr) => (
					<a
						aria-label={name}
						title={name}
						target='_blank'
						rel='noreferrer noopener'
						class={`social-link col-span-2 flex flex-col items-center border border-yellow-200 py-4 px-4 transition hover:bg-yellow-200 hover:text-gray-900 sm:col-span-1 sm:w-32 ${
							(i === 0 && 'md:border-r') ||
							(i === arr.length - 1 && 'md:border-l') ||
							'md:border-x'
						}`}
						href={url}
					>
						{(name.toLowerCase() === 'github' && (
							<svg
								class='social-icon mb-2 flex w-32 items-center justify-center opacity-0'
								xmlns='http://www.w3.org/2000/svg'
								width='2.5rem'
								height='2.5rem'
								viewBox='0 0 24 24'
							>
								<path
									fill='currentColor'
									d='M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z'
								/>
							</svg>
						)) ||
							(name.toLowerCase() === 'twitter' && (
								<svg
									class='social-icon mb-2 flex w-32 items-center justify-center opacity-0'
									xmlns='http://www.w3.org/2000/svg'
									width='2.5rem'
									height='2.5rem'
									viewBox='0 0 24 24'
								>
									<path
										fill='currentColor'
										d='M22.46 6c-.77.35-1.6.58-2.46.69c.88-.53 1.56-1.37 1.88-2.38c-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29c0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15c0 1.49.75 2.81 1.91 3.56c-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07a4.28 4.28 0 0 0 4 2.98a8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21C16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56c.84-.6 1.56-1.36 2.14-2.23Z'
									/>
								</svg>
							)) ||
							(name.toLowerCase() === 'twitch' && (
								<svg
									class='social-icon mb-2 flex w-32 items-center justify-center opacity-0'
									xmlns='http://www.w3.org/2000/svg'
									width='2.5rem'
									height='2.5rem'
									viewBox='0 0 24 24'
								>
									<path
										fill='currentColor'
										d='M11.64 5.93h1.43v4.28h-1.43m3.93-4.28H17v4.28h-1.43M7 2L3.43 5.57v12.86h4.28V22l3.58-3.57h2.85L20.57 12V2m-1.43 9.29l-2.85 2.85h-2.86l-2.5 2.5v-2.5H7.71V3.43h11.43Z'
									/>
								</svg>
							)) ||
							(name.toLowerCase() === 'linkedin' && (
								<svg
									class='social-icon mb-2 flex w-32 items-center justify-center opacity-0'
									xmlns='http://www.w3.org/2000/svg'
									width='2.5rem'
									height='2.5rem'
									viewBox='0 0 24 24'
								>
									<path
										fill='currentColor'
										d='M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77Z'
									/>
								</svg>
							))}

						<span class='social-caption capitalize opacity-0'>{name}</span>
					</a>
				))
			}
		</aside>
	</nav>
</section>
<script>
	gsap.to('.logo', {
		opacity: 1,
		duration: 1,
		delay: 0.2,
		y: 0,
	});

	gsap.to('.heading-bullet', { opacity: 1, duration: 1, delay: 0.4, y: 0 });

	gsap.to('.bio', { opacity: 1, duration: 1, delay: 0.5, y: 0 });

	gsap.to('.hero-article', {
		opacity: 1,
		duration: 1,
		delay: 0.4,
		y: 0,
	});

	gsap.to('.nav-link', {
		opacity: 1,
		duration: 1,
		delay: 0.8,
		stagger: 0.3,
		translateY: 0,
	});

	gsap.to('.social-links', {
		opacity: 1,
		duration: 1,
		delay: 0.7,
		y: 0,
	});

	gsap.to('.social-icon', {
		opacity: 1,
		duration: 1,
		delay: 0.7,
		stagger: 0.3,
	});

	gsap.to('.social-caption', {
		opacity: 1,
		duration: 1,
		delay: 0.7,
		stagger: 0.3,
	});
</script>
