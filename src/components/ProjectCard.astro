---
const { project } = Astro.props;
---

<li
	class='col-span-12 flex w-full flex-col border border-gray-700 bg-gray-900 shadow-md md:flex-row'
>
	<article class='p-4 md:w-1/3 lg:w-1/2'>
		<h3 class='text-2xl'>{project.title}</h3>
		<p class='mt-4'>{project.description}</p>
	</article>
	<figure
		class='border-t border-gray-700 md:w-2/3 md:border-t-0 md:border-l lg:w-1/2'
	>
		<img class='object-cover' src={project.image.src} alt={project.image.alt} />
	</figure>
</li>
