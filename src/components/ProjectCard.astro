---
const { project } = Astro.props;
---

<li
	class='col-span-12 flex w-full border border-gray-700 bg-gray-900 shadow-md'
>
	<article class='w-1/2 p-4'>
		<h3 class='text-2xl'>{project.title}</h3>
		<p>{project.description}</p>
	</article>
	<figure class='w-1/2 border-l border-gray-700'>
		<img src={project.image.src} alt={project.image.alt} />
	</figure>
</li>
