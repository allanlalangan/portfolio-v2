---
const { project } = Astro.props;
---

<li
	class='col-span-12 flex w-full flex-col border border-gray-700 bg-gray-900 shadow-md lg:flex-row'
>
	<article class='flex flex-1 flex-col p-4'>
		<h3 class='text-2xl'>{project.title}</h3>
		<p class='my-4 flex-1'>{project.description}</p>
		<section class='grid grid-cols-4 gap-2'>
			<a
				href={project.url}
				target='_blank'
				rel='noreferrer noopener'
				class='col-span-2 border-2 border-yellow-200 py-4 text-center text-lg uppercase tracking-wide text-yellow-200 transition hover:bg-yellow-200 hover:text-gray-900'
				>Live</a
			>
			<a
				href={project.repo}
				target='_blank'
				rel='noreferrer noopener'
				class='col-span-2 border-2 border-yellow-200 py-4 text-center text-lg uppercase tracking-wide text-yellow-200 transition hover:bg-yellow-200 hover:text-gray-900'
				>Repo</a
			>
		</section>
	</article>
	<figure class='flex-1 border-t border-gray-700 lg:border-t-0 lg:border-l'>
		<img class='object-cover' src={project.image.src} alt={project.image.alt} />
	</figure>
</li>
