---
import '../styles/global.css';
const { title } = Astro.props;
const date = new Date();
const year = date.getFullYear();
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<script
			defer
			src='https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js'
		></script>
		<link
			rel='icon'
			href="data:image/svg+xml,<svg style='background:black;borderRadius:100px' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='80' x='23' font-size='105' font-style='italic' fill='white'>ᾰ</text></svg>"
		/>
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=DM+Mono:wght@300;400;500&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=Martel:wght@200;300;400;600;700;800;900&display=swap'
			rel='stylesheet'
		/>
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='bg-gray-900 font-body text-gray-50'>
		<main class=''>
			<slot />
		</main>
		<footer class='mt-12 bg-gray-800 px-4 py-8 tracking-wide text-yellow-200'>
			<p class='text-lg'>Allan Lalangan © {year}</p>
		</footer>
		<p></p>
	</body>
</html>
