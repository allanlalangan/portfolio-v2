---
import ServiceCard from '../components/ServiceCard.astro';
import MainLayout from '../layouts/MainLayout.astro';
import { services, projects } from '../data/data';
import ProjectCard from '../components/ProjectCard.astro';

const about = {
	name: { first: 'Allan', last: 'Lalangan' },
	title: 'Front End Engineer',
	skills: ['HTML', 'CSS', 'JavaScript'],
};
---

<MainLayout title='Allan Lalangan | Front-End Engineer'>
	<section class='p-6 md:p-12'>
		<p class='text-xl'>Hello, world. I'm</p>
		<h1 class='flex flex-col font-display text-6xl font-bold md:text-8xl'>
			<span>{`${about.name.first}`}</span>
			<span>{`${about.name.last}.`}</span>
		</h1>
		<p class='text-3xl md:text-5xl'>Front-end Engineer</p>
	</section>
	<section class='mt-24'>
		<h2 class='mb-12 font-display text-4xl font-semibold text-yellow-300'>
			My Services
		</h2>
		<ul class='grid grid-cols-12 gap-4'>
			{services?.map((service, i) => <ServiceCard key={i} service={service} />)}
		</ul>
	</section>
	<section class='mt-24'>
		<h2 class='mb-12 font-display text-4xl font-semibold text-yellow-300'>
			Selected Works
		</h2>
		<ul class='grid grid-cols-12 gap-4'>
			{projects?.map((project, i) => <ProjectCard key={i} project={project} />)}
		</ul>
	</section>
</MainLayout>
